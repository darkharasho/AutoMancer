{
  "name": "automancer",
  "version": "1.0.0",
  "description": "Configurable auto clicker and key presser with Mica effect",
  "main": "main.js",
  "author": "AutoMancer",
  "scripts": {
    "start": "electron .",
    "dist": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "test": "echo \"No tests specified\""
  },
  "dependencies": {
    "mica-electron": "^1.5.16",
    "@jitsi/robotjs": "^0.6.17"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "electron": "^37.2.6"
  },
  "engines": {
    "node": ">=18 <19",
    "npm": ">=9"
  },
  "build": {
    "appId": "com.automancer.app",
    "productName": "AutoMancer",
    "files": [
      "**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "images/AutoMancer.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "images/AutoMancer.ico"
    }
  }
}
