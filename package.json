{
  "name": "automancer",
  "version": "1.0.0",
  "description": "Configurable auto clicker and key presser with Mica effect",
  "main": "main.js",
  "author": "AutoMancer",
  "scripts": {
    "start": "electron .",
    "package:win": "electron-packager . AutoMancer --platform=win32 --arch=x64 --icon=images/AutoMancer.ico --out=dist --overwrite",
    "package:mac": "electron-packager . AutoMancer --platform=darwin --arch=x64 --icon=images/AutoMancer.icns --out=dist --overwrite",
    "package": "npm run package:win && npm run package:mac",
    "dist:win": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "dist:mac": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac && xattr -cr dist/mac-arm64/AutoMancer.app",
    "test": "echo \"No tests specified\""
  },
  "dependencies": {
    "mica-electron": "^1.5.16",
    "@jitsi/robotjs": "^0.6.17"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "electron": "^37.2.6",
    "electron-packager": "^17.1.1",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18 <19",
    "npm": ">=9"
  },
  "build": {
    "appId": "com.automancer.app",
    "productName": "AutoMancer",
    "files": [
      "**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "images/AutoMancer.icns",
      "identity": null,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis",
      "icon": "images/AutoMancer.ico"
    }
  }
}
